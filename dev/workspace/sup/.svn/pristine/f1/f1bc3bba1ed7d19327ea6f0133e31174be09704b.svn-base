@media all and (max-width:1201px){
	.sub_slider{
		
	}

}


@media all and (max-width:1170px){
	
	.sub_slider>.navContainer>.rightClass{
		right: 0;
	}
	.sub_slider>.navContainer>.leftClass{
		left: 2.2%;
	}
	.Display .text_box{max-height:initial;}

}

@media all and (max-width:960px){
	.Display .text_box tbody tr td{font-size:12px;}

	.Display .text_box tbody tr th{font-size:14px;}

	.Display .text_box tbody tr td {height: 42px;}
	

}


@media all and (max-width:800px){

	.Display .slide_thumbnail{
		height: 85px;
		padding-left: 20px;
		padding-right: 20px;
		padding-bottom: 17px;
		overflow: hidden;
		overflow-x: scroll;
		white-space: nowrap;
		box-sizing: border-box;

		-webkit-overflow-scrolling: touch;
	}

	.Display .text_box tbody tr td{font-size:10px;}

	.Display .text_box tbody tr th{font-size:12px;}

}




@media all and (max-width:768px){
	
	

}


@media all and (max-width:480px){
	

	.sub_slider{
		overflow: hidden;
	}
	.sub_slider>.navContainer>.leftClass, 
	.sub_slider>.navContainer>.rightClass{
		height: 100%;
		width: 46px;
		background-position-x: 27px;
		position: absolute;
		background-size: 80%;
		opacity: 0.6;
	}
	.sub_slider>.navContainer>.leftClass{
		left: -21.8px;
	}
	.sub_slider>.navContainer>.rightClass{
		right: -25px;
		background-position-x: -18px;
	}

	.Display .content_text p{
		width: 90%; margin: auto;
		font-size: 1.2rem;
	}

	

}

@media all and (max-width:414px){
	.Display .text_box tbody tr th{font-size:10px;}
	

}

@media all and (max-width:360px){
	.Display .text_box tbody tr td{font-size:8px;}

	.Display .text_box tbody tr th{font-size:8px;}

	.Display .text_box tbody tr td {height: 38px;}

	.text_box_inside {width: 90% !important;}
	
	

}

@media all and (max-width:320px){

	.text_box_inside {width: 100% !important;}
	
	.Display .text_box .text_box_inside{padding: 0px 0px;box-sizing: border-box;}

}