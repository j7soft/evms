/* Display_1 */
.Display{}
.Display .content_text{
	margin-bottom: 40px;
}
.Display .content_text p{
	text-align: center;
	font-size:1.2rem;
	color: #63b746;
	letter-spacing: -0.5px;
	font-weight: 300;
}

.Display .slide_thumbnail{
	width: 100%;
	text-align: center;
	margin-bottom: 50px;
	position: relative;
}

.Display .slide_thumbnail span{
	display: inline-block;
}
.Display .slide_thumbnail img{
	width: 121px; height: 68px;
	cursor: pointer;
}

.Display .slide_thumbnail .prev,
.Display .slide_thumbnail .next{
	width: 50px;
	height: 100%;
	background-color: #8f1843;
	vertical-align: top;
	color: #fff;
	text-align: center;
	line-height: 60px;
	font-size: 3rem;
	cursor: pointer;
}
.Display .slide_thumbnail .prev{
	position: absolute;
	left: 0;
}
.Display .slide_thumbnail .next{
	position: absolute;
	right: 0;
}

#section .Display:after{
	content:'';
	display: block;
	clear: both;
}

.Display .text_box{
	width:100%;
    max-width: 1170px;
    margin-top: 30px;
    margin-bottom: 70px;
	box-sizing: border-box;
	/* border: 1px solid #ccc;
	    border-radius: 10px; */
    text-align: center;
    margin: 0 auto;
	/*border-bottom:1px solid #c8c8c8;*/
}
.Display .text_box thead tr{height: 50px; border-top:1px solid #d0d2d3; border-bottom:1px solid #d0d2d3; font-size:0.875rem; color:#929497;}
.Display .text_box thead tr th:nth-child(1){width:5%;}
.Display .text_box tbody tr td{height:47px; border-top:1px solid #dcdcdc;; font-size:0.875rem; color:#58595b; text-align: center;}
.Display .text_box tbody tr:nth-child(1) td{border-top:none;}
.Display .text_box tbody tr:nth-child(2) td{border-top:1px solid #646464;}
.Display .text_box tbody tr .last_td{border-left:1px solid #dfe0e1;}
.Display .text_box .width{width: 88px;}

.Display .text_box .text_box_inside{
	display:inline-block;
	padding:20px 24px;
}
.Display .text_box p{
	font-size: 1rem;
	color: #58595b;
	/* font-weight: 500; */
	padding:2px 0;
}
.Display .text_box p span.red_star{
	color: red;
}


