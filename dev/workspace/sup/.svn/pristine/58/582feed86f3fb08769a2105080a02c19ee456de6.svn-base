@charset "utf-8";

input, select, textarea{
	outline: none;
}
/*  */
#main_wrap{
	width: 625px;
}
#main_wrap:after{
	content: '';
	display: block;
	clear: both;
}
.left_content{
	box-sizing: border-box;
}
.left_content .img_box{
	width: 100%; height: 500px;
	background-color: #ddd;
	margin-bottom: 20px;
}
.left_content .form_group{
	width: 100%;
}
.form_group p{
	width: 17%;
    height: 100%;
    line-height: 24px;
    display: inline-block;
    font-size: 11px;
    font-weight: 500;
    box-sizing: border-box;
    font-weight: bold;
    font-size: 14px;
}
.right_content{
	box-sizing: border-box;
}

.right_content .form_group:after{
	content: '';
	display: block;
	clear: both;
}

.right_content input[type="text"],
.right_content input[type="date"]{width: 82%;
    height: 100%;
    box-sizing: border-box;
    border: 1px solid #ddd;
    padding: 5px;
    font-size: 14px;
}
.right_content input[type="date"]{float:right;}

.right_content div:nth-of-type(6) input[type="text"],
.right_content div:nth-of-type(7) input[type="text"]{width:10%;}

.right_content input[type="checkbox"]{
	margin: 0;
}
.right_content textarea{width: 82%;
    height: 100%;
    box-sizing: border-box;
    border: 1px solid #ddd;
    padding: 5px;
    font-size: 14px;
}

.right_content .form_group{
	margin-bottom: 10px;
}
.right_content .p_title, .right_content small{width: 17%;
    height: 100%;
    line-height: 24px;
    display: inline-block;
    font-size: 11px;
    font-weight: 500;
    box-sizing: border-box;
    font-weight: bold;
    font-size: 14px;
}
.right_content .form_group select{
	width: 20%;
    height: 100%;
    box-sizing: border-box;
    border: 1px solid #ddd;
    padding: 5px;
    font-size: 14px;
}

.right_content .form_group .right{
	float: right;
	height: 30px; line-height: 30px;
}
.right_content .form_group .right.text{
	margin-right: 10px;
	font-size: 1.2rem;
}
.form_group input[type="number"]{
	width: 82%;
    height: 100%;
    box-sizing: border-box;
    border: 1px solid #ddd;
    padding: 5px;
    font-size: 14px;
    float: right;
}

.right_content .form_group input[type="submit"]{
	width: 100%;
	height: 30px;
	background-color: transparent;
}

.right_content .form_group #ebtn{
	width: 100%;
    height: 35px;
    background: #a6a8ab;
    text-align: center;
    color: #fff;
}