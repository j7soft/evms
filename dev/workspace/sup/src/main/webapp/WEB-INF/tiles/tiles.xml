<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

	<!-- 사용자 페이지 -->
	<definition name="main" template="/WEB-INF/jsp/template/main_layout.jsp">
		<put-attribute name="title" value="행사관리시스템"></put-attribute>
		<put-attribute name="header" value="/WEB-INF/jsp/template/header.jsp"></put-attribute>
		<put-attribute name="body" value="/WEB-INF/jsp/template/maincontent.jsp" />
		<put-attribute name="footer" value="/WEB-INF/jsp/template/footer.jsp"></put-attribute>
	</definition>
	<definition name="jsp/*" extends="main">
		<put-attribute name="body" value="/WEB-INF/jsp/{1}.jsp" />
	</definition>
	
	<definition name="jsp/*/*" extends="main">
		<put-attribute name="body" value="/WEB-INF/jsp/{1}/{2}.jsp" />
	</definition>
	<!-- 예약페이지 연동 -->
	<definition name="jsp/template/book/*" extends="main">
		<put-attribute name="body" value="/WEB-INF/jsp/template/book/{1}.jsp" />
	</definition>
	<!-- 게시판 연동 -->
	<definition name="jsp/template/board/*" extends="main">
		<put-attribute name="body"
			value="/WEB-INF/jsp/template/board/{1}.jsp" />
	</definition>
	<!-- 소개페이지 연동 -->
	<definition name="jsp/template/SUPIC/*" extends="main">
		<put-attribute name="body"
			value="/WEB-INF/jsp/template/SUPIC/{1}.html" />
	</definition>
	<!-- 주요사업 연동 -->
	<definition name="jsp/template/SUPST/*" extends="main">
		<put-attribute name="body"
			value="/WEB-INF/jsp/template/SUPST/{1}.html" />
	</definition>
	<!-- 공간/시설 연동 -->
	<definition name="jsp/template/display/*" extends="main">
		<put-attribute name="body"
			value="/WEB-INF/jsp/template/display/{1}.html" />
	</definition>
	<!-- 달력 연동 -->
	<definition name="egovframework/com/cop/smt/*/*" extends="main">
		<put-attribute name="body"
			value="/WEB-INF/jsp/egovframework/com/cop/smt/{1}/{2}.jsp" />
	</definition>




	<!-- 관리자 페이지 -->
	<definition name="admin" template="/WEB-INF/jsp/admin/admin_layout.jsp">
		<put-attribute name="title" value="행사관리시스템 관리자"></put-attribute>
		<put-attribute name="nav"
			value="/WEB-INF/jsp/admin/EgovUnitLeft.jsp" />
		<put-attribute name="body"
			value="/WEB-INF/jsp/admin/EgovUnitContent.jsp" />
		<put-attribute name="footer" value="/WEB-INF/jsp/template/footer.jsp"></put-attribute>
	</definition>
	
	<definition name="jsp/admin/*" extends="admin">
		<put-attribute name="body" value="/WEB-INF/jsp/admin/{1}.jsp" />
	</definition>
	<definition name="jsp/admin/content/*" extends="admin">
		<put-attribute name="body" value="/WEB-INF/jsp/admin/content/{1}.jsp" />
	</definition>
	<definition name="jsp/admin/book/*" extends="admin">
		<put-attribute name="body" value="/WEB-INF/jsp/admin/book/{1}.jsp" />
	</definition>
	<definition name="jsp/admin/board/*" extends="admin">
		<put-attribute name="body" value="/WEB-INF/jsp/admin/board/{1}.jsp" />
	</definition>
	<definition name="jsp/admin/reservation/*" extends="admin">
		<put-attribute name="body" value="/WEB-INF/jsp/admin/reservation/{1}.jsp" />
	</definition>
</tiles-definitions>
